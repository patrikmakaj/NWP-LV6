extends layout

block content
  h1 Svi Projekti
  a(href="/projects/new", class="btn btn-primary mb-3") Dodaj novi projekt

  ul.list-group
    each project in projects
      li.list-group-item
        h5= project.name
        p= project.description
        a(href='/projects/' + project._id, class="btn btn-sm btn-info me-2") Detalji
        a(href='/projects/' + project._id + '/edit', class="btn btn-sm btn-warning me-2") Uredi
        form(action='/projects/' + project._id + '?_method=DELETE', method="POST", style="display:inline")
          button(type="submit", class="btn btn-sm btn-danger") Obri≈°i
